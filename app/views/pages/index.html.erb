<% content_for :head do %>
  <% @title = "Child's i Foundation" %>
  <%= javascript_include_tag 'swfobject' %> 
  
  <script type="text/javascript">
  swfobject.embedSWF("http://metade.org/temp/IChildsFoundation.swf", "wall", "500", "450", "9.0.0", "", { path: "/wall.xml" });
  </script>
<% end %>

<div id="sidebar" class="col_util">
  <h3><%= link_to('Donate', donate_path) %></h3>
  
  <div id="twitter_div">
    <h3 class="sidebar-title">Latest bricks</h3>
    <ul id="twitter_update_list"></ul>
    </div>
    <script type="text/javascript" src="http://twitter.com/javascripts/blogger.js"></script>
    <script type="text/javascript" src="http://twitter.com/statuses/user_timeline/<%= TWITTER_USERNAME %>.json?callback=twitterCallback2&amp;count=7"></script>
  </div>
</div>

<div id="content" class="col_wide">
  <%= render :partial => '/shared/wall', :locals => { :wall => @wall } %>
</div>
