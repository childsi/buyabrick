<h1>Listing orders</h1>

<table>
  <tr>
    <th>Brick</th>
    <th>Ip address</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Card type</th>
    <th>Card expires on</th>
  </tr>

<% for order in @orders %>
  <tr>
    <td><%=h order.brick_id %></td>
    <td><%=h order.ip_address %></td>
    <td><%=h order.first_name %></td>
    <td><%=h order.last_name %></td>
    <td><%=h order.card_type %></td>
    <td><%=h order.card_expires_on %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

