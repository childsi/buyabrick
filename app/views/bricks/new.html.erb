<% content_for :head do %>
  <% @title = "New brick" %>
  <%= stylesheet_link_tag 'bricks' %>
<% end %>

<%= render :partial => 'progress', :locals => { :step => 1 } %>
<% form_for(@brick) do |f| %>
  <h2>Brick Message</h2>
  <p>Please write a message to display on our wall. Dedicate it to a fried, a loved one, to yourself or
    give Child's i Foundation some love!</p>
  
  <div class="panel">
    <%= brick_image_tag(@brick.value_in_pounds) %>
    <div id="value">
    <%= f.label :value_in_pounds, "Â£" %><%= @brick.value_in_pounds %>
    <%= f.hidden_field :value_in_pounds %>
    <%= f.error_message_on(:value_in_pounds) %>
    </div>
  </div>
  
  <fieldset id="brick_details">
    <div class="panel">
      <p>
        <%= f.check_box :show_value %>
        <%= f.label :show_value, "Show amount on wall?" %>
      </p>
      <p>
        <%= f.label :message, "Add message here (140 characters limit)" %><br />
        <%= f.text_area :message, :rows => 6 %>
      </p>
      
      <ul>
      <% for i in 1..6 %>
        <li>
          <%= image_tag("/images/bricks/icons/#{i}.jpg") %>
          <%= f.radio_button(:icon_id, i) %>
        </li>
      <% end %>
      </ul>
      
    </div>
  </fieldset>
  
  <fieldset id="personal_details">
    <div>
      <h2>Details</h2>
      <span>(fields with * are required)</span>
      
      <p>
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </p>
      <p>
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </p>
      <p>
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :url, "Website" %><br />
        <%= f.text_field :url %>
      </p>
      <p>
        <%= f.label :twitter, "Twitter username" %><br />
        <%= f.text_field :twitter %>
      </p>
    </div>
  </fieldset>
  
  <p>
    <%= f.submit "Continue" %>
  </p>
<% end %>
