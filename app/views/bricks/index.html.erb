<h1>Listing bricks</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Name</th>
    <th>Email</th>
    <th>Url</th>
    <th>Message</th>
  </tr>

<% for brick in @bricks %>
  <tr>
    <td><%=h brick.value %></td>
    <td><%= link_to h(brick.name), brick %></td>
    <td><%=h brick.email %></td>
    <td><%=h brick.url %></td>
    <td><%=h brick.message %></td>
    
    <% if admin? %>
      <td><%= link_to 'Edit', edit_brick_path(brick) %></td>
      <td><%= link_to 'Destroy', brick, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if admin? %>
  <%= link_to 'New brick', new_brick_path %>
<% end %>